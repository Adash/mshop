{% extends 'MainBundle::layout.html.twig' %}

{% block body -%}
    <h1>Product list</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Mainmaterial</th>
                <th>Gurubeadmaterial</th>
                <th>String</th>
                <th>Knot</th>
                <th>Length</th>
                <th>Description</th>
                <th>Instock</th>
                <th>Actions</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('product_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.mainMaterial }}</td>
                <td>{{ entity.guruBeadMaterial }}</td>
                <td>{{ entity.string }}</td>
                <td>{{ entity.knot }}</td>
                <td>{{ entity.length }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.inStock }}</td>
                <td>{{ entity.price }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('product_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('product_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('product_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
