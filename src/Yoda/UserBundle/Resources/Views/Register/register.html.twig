{% extends '::base.html.twig' %}

{% block body %}

    <div>
        <h1>Register</h1>
        <form action="{{ path('register') }}" method="POST" role="form">

                {{ form_errors(form) }}
            
                {{ form_row(form.username) }}
                {{ form_row(form.name) }}
                {{ form_row(form.surname) }}
                {{ form_row(form.email) }}
                {{ form_row(form.password.first, {
                    'label': 'Password'
                }) }}
                {{ form_row(form.password.second, {
                    'label': 'Repeat Password'
                }) }}

                {{ form_rest(form) }} {# takes care of errors not assigned to any specific field#}
            
            <input class="btn btn-default" type="submit" value="Register" /> 
        </form>

    </div>

{% endblock %}