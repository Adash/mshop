{% extends 'UserBundle::layout.html.twig' %}

{% block body -%}
    <h2 class="text-info">Orders list</h2>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Buyer</th>
                <th>Item name</th>
                <th>Date ordered</th>
                <th>Date updated</th>
                <th>Date payed</th>
                <th>Date dispatched</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('orders_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.buyer.name }} {{ entity.buyer.surname }}</td>
                <td>{{ entity.item.name }}</td>
                <td>{% if entity.dateOrdered %}{{ entity.dateOrdered|date('Y-m-d H:i') }}{% endif %}</td>
                <td>{% if entity.dateUpdated %}{{ entity.dateUpdated|date('Y-m-d H:i') }}{% endif %}</td>
                <td>{% if entity.datePayed %}{{ entity.datePayed|date('Y-m-d H:i') }}{% endif %}</td>
                <td>{% if entity.dateDispatched %}{{ entity.dateDispatched|date('Y-m-d H:i:') }}{% endif %}</td>
                <td>{{ entity.address }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('orders_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('orders_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('orders_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
